{ pkgs, ... }:

{
  home.packages = with pkgs; [
    # Utilities
    flameshot
    st
    dmenu
    xclip
    gnome.gnome-system-monitor
    winetricks
  ];
  
  # Setup Monitors
  programs.autorandr = {
    enable = true;
    profiles = {
      "default" = {
        fingerprint = {
          HDMI-1 = "";
          HDMI-2 = "";
        };
        config = {
          HDMI-1.enable = true;
          HDMI-1 = {
            crtc = 0;
            mode = "1920x1080";
            position = "1360x0";
            primary = true;
            rate = "74.97";
          };
          
          HDMI-2.enable = true;
          HDMI-2 = {
            crtc = 1;
            mode = "1360x768";
            position = "0x312";
            rate = "60.02";
          };
        };
      };
    };
  };
}
